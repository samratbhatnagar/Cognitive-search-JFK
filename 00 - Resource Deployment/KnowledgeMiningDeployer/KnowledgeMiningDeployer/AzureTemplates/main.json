{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "azureAdminClientId": {
      "type": "string",
      "metadata": {
        "description": "ClientId for Azure Application with management access"
      }
    },
    "azureAdminClientSecret": {
      "type": "securestring",
      "metadata": {
        "description": "ClientSecret for Azure Application with management access"
      }
    },
    "adminUsername": {
      "type": "string",
      "defaultValue": "s2admin",
      "metadata": {
        "description": "Username for the Virtual Machine."
      }
    },
    "adminPassword": {
      "type": "securestring",
      "defaultValue": "Password.1!!",
      "metadata": {
        "description": "Password for the Virtual Machine and SQL Server."
      }
    },
    "prefix": {
      "type": "string",
      "defaultValue": "jfk",
      "metadata": {
        "description": "A prefix added to all created resources."
      }
    },
    "githubRepo": {
      "type": "string",
      "defaultValue": "https://github.com/givenscj/CogsDeployment/blob/master",
      "metadata": {
        "description": "The github location for deployment files."
      }
    },
    "useSampleData": {
      "type": "string",
      "defaultValue": "true",
      "metadata": {
        "description": "Whether to download and install the JFK sample files."
      }
    },
    "blobStorageConnectionString": {
      "type": "string",
      "defaultValue": "",
      "metadata": {
        "description": "A pointer to an existing blob storage account to index."
      }
    },
    "configFilePath": {
      "type": "string",
      "defaultValue": "",
      "metadata": {
        "description": "A path to a configuration file for deployer to execute."
      }
    },
    "customDataZip": {
      "type": "string",
      "defaultValue": "",
      "metadata": {
        "description": "A path to a zip file that will be extracted and then imported into the storage account for indexing."
      }
    },
    "bingEndPoint": {
      "type": "string",
      "defaultValue": "",
      "metadata": {
        "description": "The Bing endpoint for the search skill."
      }
    },
    "bingKey": {
      "type": "string",
      "defaultValue": "",
      "metadata": {
        "description": "Your Bing API Key for the search skill."
      }
    }
  },
  "variables": {

  },
  "resources": [
    {
      "name": "[concat(parameters('prefix'),'-map')]",
      "type": "Microsoft.Maps/accounts",
      "apiVersion": "2018-05-01",
      "location": "global",
      "tags": {},
      "sku": {
        "name": "s0",
        "tier": "Standard"
      }
    },
    {
      "type": "Microsoft.Sql/servers",
      "apiVersion": "2015-05-01-preview",
      "name": "[concat(parameters('prefix'),'-sql')]",
      "location": "westus2",
      "kind": "v12.0",
      "properties": {
        "administratorLogin": "[parameters('adminUsername')]",
        "administratorLoginPassword": "[parameters('adminPassword')]",
        "version": "12.0"
      }
    },
    {
      "type": "Microsoft.Sql/servers/databases",
      "apiVersion": "2017-03-01-preview",
      "name": "[concat(parameters('prefix'), '-sql', '/jfk-db')]",
      "location": "westus2",
      "dependsOn": [
        "[resourceId('Microsoft.Sql/servers', concat(parameters('prefix'),'-sql'))]"
      ],
      "sku": {
        "name": "S1",
        "tier": "Standard"
      },
      "kind": "v12.0,user",
      "properties": {
        "collation": "SQL_Latin1_General_CP1_CI_AS",
        "maxSizeBytes": 268435456000,
        "catalogCollation": "SQL_Latin1_General_CP1_CI_AS",
        "zoneRedundant": false
      }
    },
    {
      "type": "Microsoft.CognitiveServices/accounts",
      "apiVersion": "2016-02-01-preview",
      "name": "[concat(parameters('prefix'),'-cogs')]",
      "location": "westus2",
      "sku": {
        "name": "S0"
      },
      "kind": "CognitiveServices",
      "properties": {}
    },
    {
      "type": "Microsoft.Search/searchServices",
      "apiVersion": "2015-08-19",
      "name": "[concat(parameters('prefix'),'-search')]",
      "location": "westus2",
      "sku": {
        "name": "basic"
      },
      "properties": {
        "replicaCount": 1,
        "partitionCount": 1,
        "hostingMode": "default"
      }
    },
    {
      "type": "Microsoft.Storage/storageAccounts",
      "apiVersion": "2019-04-01",
      "name": "[concat(parameters('prefix'),'storage')]",
      "location": "westus2",
      "sku": {
        "name": "Standard_LRS",
        "tier": "Standard"
      },
      "kind": "Storage",
      "properties": {
        "networkAcls": {
          "bypass": "AzureServices",
          "virtualNetworkRules": [],
          "ipRules": [],
          "defaultAction": "Allow"
        },
        "supportsHttpsTrafficOnly": false,
        "encryption": {
          "services": {
            "file": {
              "enabled": true
            },
            "blob": {
              "enabled": true
            }
          },
          "keySource": "Microsoft.Storage"
        }
      }
    },
    {
      "type": "Microsoft.Web/serverfarms",
      "apiVersion": "2016-09-01",
      "name": "[concat(parameters('prefix'),'-appsvc-web')]",
      "location": "westus2",
      "sku": {
        "name": "B1",
        "tier": "Basic",
        "size": "B1",
        "family": "B",
        "capacity": 1
      },
      "kind": "app",
      "properties": {
        "name": "[concat(parameters('prefix'),'-appsvc-web')]",
        "perSiteScaling": false,
        "reserved": false,
        "targetWorkerCount": 0,
        "targetWorkerSizeId": 0
      }
    },
    {
      "type": "Microsoft.Web/serverfarms",
      "apiVersion": "2016-09-01",
      "name": "[concat(parameters('prefix'),'-appsvc-func')]",
      "location": "westus2",
      "sku": {
        "name": "B1",
        "tier": "Basic",
        "size": "B1",
        "family": "B",
        "capacity": 1
      },
      "kind": "app",
      "properties": {
        "name": "[concat(parameters('prefix'),'-appsvc-func')]",
        "perSiteScaling": false,
        "reserved": false,
        "targetWorkerCount": 0,
        "targetWorkerSizeId": 0
      }
    },
    {
      "type": "Microsoft.Web/sites",
      "apiVersion": "2016-08-01",
      "name": "[concat(parameters('prefix'),'-func01')]",
      "location": "westus2",
      "dependsOn": [
        "[resourceId('Microsoft.Web/serverfarms', concat(parameters('prefix'),'-appsvc-func'))]"
      ],
      "kind": "functionapp",
      "properties": {
        "enabled": true,
        "reserved": false,
        "scmSiteAlsoStopped": false,
        "clientAffinityEnabled": false,
        "clientCertEnabled": false,
        "hostNamesDisabled": false,
        "containerSize": 1536,
        "dailyMemoryTimeQuota": 0,
        "httpsOnly": false,
        "serverFarmId": "[resourceId('Microsoft.Web/serverfarms', concat(parameters('prefix'),'-appsvc-func'))]"
      },
      "resources": [
        {
          "name": "MSDeploy",
          "type": "Extensions",
          "apiVersion": "2015-02-01",
          "dependsOn": [
            "[resourceId('Microsoft.Web/Sites', concat(parameters('prefix'),'-func01'))]"
          ],
          "properties": {
            "packageUri": "[concat(parameters('githubRepo'), '/CognitiveSearch.Skills.zip?raw=true')]"
          }
        }
      ]
    },
    {
      "type": "Microsoft.Web/sites",
      "apiVersion": "2016-08-01",
      "name": "[concat(parameters('prefix'),'-web01')]",
      "location": "westus2",
      "dependsOn": [
        "[resourceId('Microsoft.Web/serverfarms', concat(parameters('prefix'),'-appsvc-web'))]"
      ],
      "kind": "app",
      "properties": {
        "enabled": true,
        "reserved": false,
        "scmSiteAlsoStopped": false,
        "clientAffinityEnabled": true,
        "clientCertEnabled": false,
        "hostNamesDisabled": false,
        "containerSize": 0,
        "dailyMemoryTimeQuota": 0,
        "httpsOnly": true,
        "serverFarmId": "[resourceId('Microsoft.Web/serverfarms', concat(parameters('prefix'),'-appsvc-web'))]"
      },
      "resources": [
        {
          "name": "MSDeploy",
          "type": "Extensions",
          "apiVersion": "2015-02-01",
          "dependsOn": [
            "[resourceId('Microsoft.Web/Sites', concat(parameters('prefix'),'-web01'))]"
          ],
          "properties": {
            "packageUri": "[concat(parameters('githubRepo'), '/CognitiveSearch.UI.zip?raw=true')]"
          }
        }
      ]
    },
    {
      "type": "Microsoft.Web/sites",
      "apiVersion": "2016-08-01",
      "name": "[concat(parameters('prefix'),'-web02')]",
      "location": "westus2",
      "dependsOn": [
        "[resourceId('Microsoft.Web/serverfarms', concat(parameters('prefix'),'-appsvc-web'))]"
      ],
      "kind": "app",
      "properties": {
        "enabled": true,
        "reserved": false,
        "scmSiteAlsoStopped": false,
        "clientAffinityEnabled": true,
        "clientCertEnabled": false,
        "hostNamesDisabled": false,
        "containerSize": 0,
        "dailyMemoryTimeQuota": 0,
        "httpsOnly": true,
        "serverFarmId": "[resourceId('Microsoft.Web/serverfarms', concat(parameters('prefix'),'-appsvc-web'))]"
      },
      "resources": [
        {
          "name": "MSDeploy",
          "type": "Extensions",
          "apiVersion": "2015-02-01",
          "dependsOn": [
            "[resourceId('Microsoft.Web/Sites', concat(parameters('prefix'),'-web02'))]"
          ],
          "properties": {
            "packageUri": "[concat(parameters('githubRepo'), '/CognitiveSearch.API.zip?raw=true')]"
          }
        }
      ]
    },
    {
      "type": "Microsoft.KeyVault/vaults",
      "apiVersion": "2018-02-14",
      "name": "[concat(parameters('prefix'),'-vault')]",
      "location": "westus2",
      "properties": {
        "tenantId": "[subscription().tenantId]",
        "sku": {
          "name": "Standard",
          "family": "A"
        },
        "accessPolicies": []
      }
    },
    {
      "type": "Microsoft.ContainerRegistry/registries",
      "apiVersion": "2017-10-01",
      "name": "[concat(parameters('prefix'),'registry')]",
      "location": "westus2",
      "sku": {
        "name": "Standard"
      },
      "properties": {
        "adminUserEnabled": true
      }
    },
    {
      "type": "Microsoft.MachineLearningServices/workspaces",
      "apiVersion": "2018-11-19",
      "name": "[concat(parameters('prefix'),'-mlworkspace')]",
      "location": "westus2",
      "dependsOn": [
        "[resourceId('Microsoft.Storage/storageAccounts', concat(parameters('prefix'),'storage'))]",
        "[resourceId('Microsoft.KeyVault/vaults', concat(parameters('prefix'),'-vault'))]",
        "[resourceId('Microsoft.Insights/components', concat(parameters('prefix'),'-insights'))]",
        "[resourceId('Microsoft.ContainerRegistry/registries', concat(parameters('prefix'),'registry'))]"
      ],
      "identity": {
        "type": "systemAssigned"
      },
      "properties": {
        "friendlyName": "[concat(parameters('prefix'),'-mlworkspace')]",
        "keyVault": "[resourceId('Microsoft.KeyVault/vaults',concat(parameters('prefix'),'-vault'))]",
        "applicationInsights": "[resourceId('Microsoft.Insights/components',concat(parameters('prefix'),'-insights'))]",
        "containerRegistry": "[resourceId('Microsoft.ContainerRegistry/registries',concat(parameters('prefix'),'registry'))]",
        "storageAccount": "[resourceId('Microsoft.Storage/storageAccounts/',concat(parameters('prefix'),'storage'))]"
      }
    },
    {
      "apiVersion": "2015-05-01",
      "name": "[concat(parameters('prefix'),'-insights')]",
      "type": "Microsoft.Insights/components",
      "location": "westus2",
      "tags": {
        "displayName": "AppInsightsComponent"
      },
      "properties": {
        "applicationId": "[concat(parameters('prefix'),'-insights')]"
      }
    },
    {
      "type": "Microsoft.DocumentDB/databaseAccounts",
      "apiVersion": "2015-04-08",
      "name": "[concat(parameters('prefix'),'-cosmosdb')]",
      "location": "westus2",
      "tags": {
        "defaultExperience": "Core (SQL)"
      },
      "kind": "GlobalDocumentDB",
      "properties": {
        "enableAutomaticFailover": false,
        "enableMultipleWriteLocations": true,
        "isVirtualNetworkFilterEnabled": false,
        "virtualNetworkRules": [],
        "databaseAccountOfferType": "Standard",
        "consistencyPolicy": {
          "defaultConsistencyLevel": "Session",
          "maxIntervalInSeconds": 5,
          "maxStalenessPrefix": 100
        },
        "capabilities": []
      }
    },
    {
      "apiVersion": "2017-06-01",
      "type": "Microsoft.Network/publicIPAddresses",
      "name": "prov-vm-ip",
      "location": "westus2",
      "properties": {
        "publicIPAllocationMethod": "Dynamic"
      }
    },
    {
      "apiVersion": "2018-04-01",
      "type": "Microsoft.Network/virtualNetworks",
      "name": "prov-vm-vnet",
      "location": "westus2",
      "properties": {
        "addressSpace": {
          "addressPrefixes": [
            "10.0.0.0/16"
          ]
        },
        "subnets": [
          {
            "name": "Subnet",
            "properties": {
              "addressPrefix": "10.0.0.0/24"
            }
          }
        ]
      }
    },
    {
      "apiVersion": "2018-04-01",
      "type": "Microsoft.Network/networkInterfaces",
      "name": "prov-vm-nic",
      "location": "westus2",
      "dependsOn": [
        "prov-vm-ip",
        "prov-vm-vnet"
      ],
      "properties": {
        "ipConfigurations": [
          {
            "name": "ipconfig1",
            "properties": {
              "privateIPAllocationMethod": "Dynamic",
              "publicIPAddress": {
                "id": "[resourceId('Microsoft.Network/publicIPAddresses','prov-vm-ip')]"
              },
              "subnet": {
                "id": "[resourceId('Microsoft.Network/virtualNetworks/subnets', 'prov-vm-vnet', 'Subnet')]"
              }
            }
          }
        ]
      }
    },
    {
      "apiVersion": "2018-04-01",
      "type": "Microsoft.Compute/virtualMachines",
      "name": "prov-vm",
      "location": "westus2",
      "dependsOn": [
        "prov-vm-nic"
      ],
      "properties": {
        "hardwareProfile": {
          "vmSize": "Standard_D1_v2"
        },
        "osProfile": {
          "computerName": "prov-vm",
          "adminUsername": "[parameters('adminUsername')]",
          "adminPassword": "[parameters('adminPassword')]"
        },
        "storageProfile": {
          "imageReference": {
            "publisher": "MicrosoftWindowsServer",
            "offer": "WindowsServer",
            "sku": "2016-Datacenter",
            "version": "latest"
          },
          "osDisk": {
            "createOption": "FromImage"
          }
        },
        "networkProfile": {
          "networkInterfaces": [
            {
              "id": "[resourceId('Microsoft.Network/networkInterfaces','prov-vm-nic')]"
            }
          ]
        }
      },
      "resources": [
      ]
    },
    {
      "type": "Microsoft.Compute/virtualMachines/extensions",
      "name": "[concat('prov-vm','/', 'dscExtension1')]",
      "apiVersion": "2018-06-01",
      "location": "westus2",
      "dependsOn": [
        "[concat('Microsoft.Compute/virtualMachines/', 'prov-vm')]"
      ],
      "properties": {
        "publisher": "Microsoft.Powershell",
        "type": "DSC",
        "typeHandlerVersion": "2.19",
        "autoUpgradeMinorVersion": true,
        "settings": {
          "ModulesUrl": "https://github.com/givenscj/CogsDeployment/raw/master/Deploy.zip",
          "ConfigurationFunction": "Deploy.ps1\\Deploy",
          "Properties": {
            "MachineName": "prov-vm",
            "AdminAzureClientId": "[parameters('azureAdminClientId')]",
            "AdminAzureClientSecret": "[parameters('azureAdminClientSecret')]",
            "TenantId": "[subscription().tenantId]",
            "SubscriptionId": "[subscription().subscriptionId]",
            "Region": "[resourceGroup().location]",
            "ResourceGroupName": "[resourceGroup().name]",
            "ResourcePrefix": "[parameters('prefix')]",
            "SearchServiceApiVersion": "2019-05-06",
            "UseSampleData": "[parameters('useSampleData')]",
            "BlobStorageConnectionString": "[parameters('blobStorageConnectionString')]",
            "ConfigFilePath": "[parameters('configFilePath')]",
            "CustomDataZip": "[parameters('customDataZip')]",
            "Username": "[parameters('adminUsername')]",
            "Password": "[parameters('adminPassword')]",
            "BingEndPoint": "[parameters('bingEndPoint')]",
            "BingKey": "[parameters('bingKey')]"
          }
        },
        "protectedSettings": null
      }
    }
  ]
}