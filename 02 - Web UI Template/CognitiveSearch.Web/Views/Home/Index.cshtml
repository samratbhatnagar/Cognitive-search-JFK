@{
    ViewData["Title"] = "Home Page";
}

<main role="main" class="col-md-12 px-4">
    <div id="index-search" class="justify-content-center">
        <div class="row">
            <div class="logo-container">
                <img class="logo" height="150" src="~/images/search-files.svg" />
            </div>
        </div>
        <div class="row">
            <div class="searchbar-container">
                @using (Html.BeginForm("Search", "Search", FormMethod.Post))
                {
                    <div class="input-group">
                        <div class="searchbar">
                            <input type="text" class="search_input" name="query" placeholder="Search your data...">
                            <button id="btn-search" type="submit" class="search_icon"><span class="ms-Icon ms-Icon--Search"></span></button>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</main>